{
  "name": "Garoon 2 GoogleCalendar",
  "short_name": "Garoon2GCal",
  "description": "クラウド型ガルーンのイベントをGoogleCalendarに楽に同期でいるようにするクローム拡張アプリ。",
  "manifest_version": 2,
  "version": "0.0.4",
  "background": {
    "scripts": [
      "javascript/shared.js",
      "javascript/GEvent.js",
      "javascript/CalendarUtils.js",
      "javascript/background.js"
    ]
  },
  "content_scripts": [{
    "matches": ["https://*.cybozu.com/g/*"],
    "js": ["javascript/shared.js", "javascript/content_script.js"],
    "css": ["css/content_script.css"]
  }],
  "options_page": "views/options.html",
  "options_ui": {
    "page": "views/options.html",
    "chrome_style": true
  },
  "permissions": [
    "identity",
    "tabs",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "oauth2": {
    "client_id": "399491186877-q1jlih0db5fjaonr99lgj3ttq3h1h5dh.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar",
      "https://www.googleapis.com/auth/calendar.readonly"
    ]
  },
  "web_accessible_resources": ["images/success.png", "images/sync.png"]
}
