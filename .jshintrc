{
    // Enforcing options
    "bitwise": true,
    "camelcase": false, // Closureの命名規則と合わない
    "curly": true,
    "eqeqeq": true,
    "es3": true,
    "forin": true,
    "freeze": true,
    "immed": true,
    "latedef": true,
    "newcap": true,
    "noarg": true,
    "noempty": false, // 空のcatchが結構ある
    "nonew": true,
    "plusplus": false, // ++は使ってもOK
    "quotmark": false, // Closure Linterがいい感じで見てくれる
    "undef": true,
    "unused": "vars", // 未使用の引数を許可
    "strict": false, // Closure Compilerで保証してるので不要
    "maxparams": 7, // TODO decrease me!!
    "maxdepth": 4, // TODO decrease me!!
    "maxstatements": 50, // TODO decrease me!!
    "maxcomplexity": 30, // TODO decrease me!!
    "maxlen": 150,

    // Relaxing options
    "eqnull": true, // `== null`を許可
    "expr": true, // Hoge.prototype.prop;を許可
    "sub": true, // obj['name']を許可

    // Environments
    "browser": true,

    // Global variables
    "globals": {
        "chrome": false,
        "console": false,
        "gapi": false
    }
}
